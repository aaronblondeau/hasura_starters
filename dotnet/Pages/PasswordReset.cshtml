@page "/reset_password/{token}"
@model HasuraStarter.Pages.PasswordResetModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.3/css/bulma.min.css">
    <title>HasuraStarters</title>
</head>
<body>
    <nav class="navbar" role="navigation" aria-label="main navigaton">
        <div class="navbar-brand">
            <a class="navbar-item">
                <img src="/hasura_starters.png" alt="HasuraStarters" style="height: 28px;" />
            </a>
        </div>
    </nav>

    <section class="hero is-light">
        <div class="hero-body">
            <div class="container">
                <h1 class="title">Password Reset</h1>
            </div>
        </div>
    </section>

    <section class="section">
        <div class="container">

            @if (@Model.Error != String.Empty)
            {
                <div class="notification is-danger">
                    @Model.Error
                </div>
            }

            @if (!string.IsNullOrEmpty(@Model.Token) && !@Model.HideForm)
            {
            <form method="post">
                <input type="hidden" asp-for="Token" />

                <div class="field">
                    <label class="label">New Password</label>
                    <div class="control">
                        <input class="input" type="password" name="password" placeholder="Password" />
                    </div>
                </div>

                <div class="field">
                    <label class="label">Confirm New Password</label>
                    <div class="control">
                        <input class="input" type="password" name="password_confirmation" placeholder="Confirm Password" />
                    </div>
                </div>

                <div class="field">
                    <button class="button is-info">Submit</button>
                </div>
            </form>
            }
        </div>
    </section>
</body>
</html>



